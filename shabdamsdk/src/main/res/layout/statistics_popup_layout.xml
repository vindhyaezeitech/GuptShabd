                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:maxHeight="10dip"
                        android:minHeight="10dip"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_green" />

                    <TextView
                        android:id="@+id/tv_pb_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="40"
                        android:textColor="@color/white"></TextView>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="3"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/rl_layout3"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/corner_radius"
                    android:backgroundTint="@color/dark_grey"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_layout_three"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/corner_radius"
                    android:backgroundTint="@color/red"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/p_bar_3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:maxHeight="10dip"
                        android:minHeight="10dip"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_green" />

                    <TextView
                        android:id="@+id/tv_pb_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="40"
                        android:textColor="@color/white"></TextView>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="4"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/rl_layout4"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/corner_radius"
                    android:backgroundTint="@color/dark_grey"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_layout_four"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/p_bar_4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
