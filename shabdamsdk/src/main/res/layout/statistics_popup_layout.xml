                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="40"
                        android:textColor="@color/white"></TextView>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_six"
                android:layout_width="match_parent"
